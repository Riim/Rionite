{
	"compilerOptions": {
		"declaration": true,
		"experimentalDecorators": true,
		"lib": ["ES2017", "DOM"],
		"module": "CommonJS",
		"moduleResolution": "Node",
		"newLine": "lf",
		"noImplicitAny": true,
		"noImplicitReturns": true,
		"noUnusedLocals": true,
		"outDir": "dist",
		"preserveConstEnums": true,
		"strictNullChecks": true,
		"suppressImplicitAnyIndexErrors": true,
		"target": "ES2017"
	},
	"files": [
		"src/index.ts"
	]
}